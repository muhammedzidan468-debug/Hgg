import os
from gtts import gTTS

def speak(text):
    print("Bot: " + text)
    tts = gTTS(text=text, lang='ur')
    tts.save("reply.mp3")
    os.system("mpv reply.mp3")

def start_bot():
    speak("Salam Zidan, main taiyar hoon. Hukam likhein")
    while True:
        cmd = input("Command likhein (fb / exit): ").lower()
        if "fb" in cmd or "facebook" in cmd:
            speak("Theek hai Zidan, Facebook khol raha hoon")
            os.system("termux-open-url https://www.facebook.com")
        elif "exit" in cmd:
            speak("Khuda Hafiz")
            break
        else:
            speak("Main ne parha: " + cmd)

if __name__ == "__main__":
    start_bot()

